<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/widget_background"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="@dimen/card_padding">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/medium_icon_size"
            android:layout_height="@dimen/medium_icon_size"
            android:contentDescription="@string/app_name"
            android:src="@drawable/ic_lotofacil_logo"
            app:tint="?android:attr/textColorPrimary" />

        <TextView
            android:id="@+id/widget_title"
            style="@style/Widget.Text.Title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/small_padding"
            android:layout_weight="1"
            tools:text="@string/widget_next_contest_title_generic" />

        <ImageButton
            android:id="@+id/widget_refresh_button"
            android:layout_width="@dimen/large_icon_size"
            android:layout_height="@dimen/large_icon_size"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/home_sync_button_description"
            android:src="@drawable/ic_refresh"
            app:tint="?android:attr/textColorSecondary" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/widget_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone"
        tools:visibility="visible">

        <TextView
            android:id="@+id/widget_date"
            style="@style/Widget.Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="17/10/2025" />

        <TextView
            android:id="@+id/widget_prize"
            style="@style/Widget.Text.Prize" 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/extra_small_padding" 
            tools:text="R$ 1.700.000,00" />

    </LinearLayout>

    <TextView
        android:id="@+id/widget_loading_text"
        style="@style/Widget.Text.Loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/general_loading"
        android:visibility="visible"
        tools:visibility="gone" />

</LinearLayout>